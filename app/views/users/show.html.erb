 <%- model_class = User -%>

<div class="col-md-12">
  <div class="display">
    <div class="page-header">
      <h1><%= @user.name %></h1>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-md-6 col-sm-6">
            <h3><%= t('.user_data') %></h3>
          </div>
          <div class="col-sm-3 col-sm-offset-3">
            <%= link_to t('.edit', default: t('helpers.links.edit')), edit_user_path, class: 'btn btn-warning btn-block' if @user == current_user %>
          </div>
        </div>
      </div>
      <div class="panel panel-body">
        <div class="row">
          <div class="col-md-6">
            <%= render 'public_user_data' %>
          </div>
          <% if @user == current_user %>
          <div class="col-md-6">
            <%= render 'private_user_data' %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<% if @user == current_user %>
  <% content_for :sidebar do %>
    <!--Actions-->
    <div class="col-md-12">
      <div class="display">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4><%=t('dashboard.index.actions')%></h4>
          </div>
          <div class="panel-body">
            <%= render partial: 'dashboard/actions' %>
          </div>
        </div>
      </div>
    </div>
    <% if can? :upload_signature, @user %>
    <!-- Signature -->
    <div class="col-md-12">
      <div class="display">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4><%= t('.signature') %></h4>
          </div>
          <div class="panel-body">
              <b><%= t('.warning') %></b><br/>
            <% if current_user.signature.nil? %>
              <%= t('.information') %>
              <p>
                <%= form_tag({action: :upload_signature}, multipart: true) do %>
                  <%= file_field 'upload', 'datafile' %><br/>
                  <%= submit_tag t('.upload') %>
                <% end %>
              </p>
            <% else %>
              <% path = 'data:image/png;base64,' << current_user.signature %>
              <p><img src="<%= path %>" width="150" height="50"/></p><br/>
              <%= link_to I18n.t('helpers.titles.destroy', model: t('.signature')), delete_signature_path(current_user), method: :post, data: {confirm: t('helpers.links.confirm')}, class: 'btn btn-danger btn-xs' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
<% end %>

