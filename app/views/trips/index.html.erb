<p id="notice"><%= notice %></p>

<h1>Listing Trips</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Destination</th>
      <th>Reason</th>
      <th>Annotation</th>
      <th>Signature</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.name %></td>
        <td><%= trip.destination %></td>
        <td><%= trip.reason %></td>
        <td><%= trip.annotation %></td>
        <td><%= trip.signature %></td>
        <td><%= trip.status %></td>
        <td><%= link_to 'Show', trip %></td>
        <% if trip.status != 'applied' %>
          <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
          <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trip', new_trip_path,:class => "btn btn-primary"%>
