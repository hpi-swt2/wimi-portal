h1 span { font-size:20px; }

.checkbox label {
    margin-bottom: 10px;
}

#openID-navbar {
    width: 80px;
}

#hpi-sign-in-navbar {
    margin-left: 5px;
}

html, body {
    height: 100%; /*Fixes the height to 100% of the viewport*/
}

body {
    padding-top: 50px; /*50px for the height of the navbar*/
    background-image: url(<%= asset_path "bg.jpg" %>);
    background-attachment: fixed;
}

.container-fluid.scrollable {
    height: 100%; /*Sets the scrollable area to 100% of the viewport*/
    overflow: auto; /*Allows the scrollable area to have a scrollbar based on the height of its content*/
    background: #ccc;
}

.navbar-fixed-top {
    height:50px;
}

.navbar-shadow {
    box-shadow: 0px 0px 9px rgba(0, 0, 0, 0.4);
}

/* Styles for anchors without a link (href) */
a:not([href]):hover {
    text-decoration: none;
    background-color: rgba(255, 255, 255, 0);
    color: black;
}

/* Add offset because the navbar covers the anchor element
   (without adding a gap in the content) */
a.anchor {
    padding-top: 90px;
    margin-top: -90px;
}

.col-sm-4 > .form-group > label.control-label {
    display: block;
}

.link {
    color: mediumblue;
}

.display {
    box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.4);
    background-color: #FFFFFF;
    padding: 15px;
}

.novertpadding {
    padding-top: 0px;
    padding-bottom: 0px;
}

.nobottompadding {
    padding-bottom: 0px;
}

.panel-compact > .form-group > .form-control {
    width: inherit;
    height: inherit;
}

div.bot-buffer-5 > div {
    margin-bottom: 5px;
}

/* select2 */
.select2-container--bootstrap {
    width: inherit !important;
}

/* Highlight table rows */
tr.highlight {
    background-color: rgb(255, 245, 195) !important
}

.work_day_tr>td {
    padding: 0px !important;
    padding-left: 2px !important;
    vertical-align: middle !important;
}

.work_day_tr>td>input {
    border: none;
    box-shadow: none;
    background-color: inherit;
    color: inherit;
}

.form-error {
    background-color: red;
    color: white;
}

/* For panels on dashboard */
.panel-scroll {
    max-height: 300px;
    overflow: auto;
}

/* ensure action column can fit at least 2 xs buttons */
th.action-heading {
    min-width: 60px;
}

/*
 * Styling for Bootstrap modal popovers of gem 'data-confirm-modal'
 */
.modal-footer {
    text-align: center;
}

.modal-footer>.btn {
    width: 49%;
}

/*!
 * DataTables + Font Awesome integration
 * License: MIT - http://datatables.net/license
 * https://datatables.net/blog/2014-06-06
 */

/*
 * Sort styling
 */
table.dataTable thead th {
    position: relative;
    background-image: none !important; /* Remove the DataTables bootstrap integration styling */
}

table.dataTable thead th.sorting:after,
table.dataTable thead th.sorting_asc:after,
table.dataTable thead th.sorting_desc:after {
    position: absolute;
    top: 12px;
    right: 8px;
    display: block;
    font-family: FontAwesome;
}

table.dataTable thead th.sorting:after {
    content: "\f0dc";
}
table.dataTable thead th.sorting_asc:after {
    content: "\f0de";
}
table.dataTable thead th.sorting_desc:after {
    content: "\f0dd";
}

div.dataTables_scrollBody table.dataTable thead th.sorting:after,
div.dataTables_scrollBody table.dataTable thead th.sorting_asc:after,
div.dataTables_scrollBody table.dataTable thead th.sorting_desc:after {
    content: "";
}

/* In Bootstrap and Foundation the padding top is a little different from the DataTables stylesheet */
table.table thead th.sorting:after,
table.table thead th.sorting_asc:after,
table.table thead th.sorting_desc:after {
    top: 8px;
}
